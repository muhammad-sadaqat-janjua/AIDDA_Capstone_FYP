<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@android:color/holo_red_light" />
            <gradient android:angle="-90" android:startColor="#BF1111" android:endColor="#CC1414"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@android:color/holo_red_light" />
            <solid android:color="#F43A3A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B81313" />
            <gradient android:angle="-90" android:startColor="#EC5959" android:endColor="@android:color/holo_red_light" />
        </shape>
    </item>
</selector>